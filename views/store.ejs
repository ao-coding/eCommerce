<!DOCTYPE html>
<html>
    <head>
        <title>The Art Store</title>
        <meta name="description" content="This is the description">
        <link rel="stylesheet" href="style.css">
        <script src="https://checkout.stripe.com/checkout.js" defer></script>
        <script>
            var stripePublicKey = '<%= stripePublicKey %>'
        </script>
        <script src="script.js" defer></script>
    </head>
    <body>
        <header class="main-header">
            <h1>The Art Store</h1>
        </header>
        <section class="content-section">
             <div class="shop-items">
                <% items.pictures.forEach(function(item){ %>
                    <div class="shop-item" data-item-id="<%= item.id %>">
                        <span class="shop-item-title"><%= item.name %></span>
                        <img class="shop-item-img" src="Images/<%= item.imgName %>">
                        <div class="shop-item-details">
                            <span class="shop-item-price">$<%= item.price / 100 %></span>
                            <button class="shop-item-btn" type="button">ADD TO CART</button>
                        </div>
                    </div>
                <% }) %>
        </div>
        </section>
        <section class="content-section">
            <h2>CART</h2>  
            <div class="cart-row">
               <span class="cart-item cart-header cart-column">ITEM</span> 
               <span class="cart-price cart-header cart-column">PRICE</span> 
               <span class="cart-quantity cart-header cart-column">QUANTITY</span>
            </div>
            <div class="cart-items">           
            </div>
            <div class="cart-total">
                <strong class="cart-total-title">Total</strong>
                <span class="cart-total-price">$0</span>
            </div>
                <button class="btn-purchase" type="button">PURCHASE</button>
        </section>
        <footer class="main-footer">
            <div class="main-footer-container">
            <h3>The Art Store </h3>
            <ul class="nav footer-nav">
                <li>
                    <a href="https://www.instagram.com" target="_blank">
                        <img src="Images/instaLogo.jpg">
                    </a>
                </li>
                <li>
                    <a href="https://www.facebook.com" target="_blank">
                        <img src="Images/facebookLogo.png">
                    </a>
                </li>
            </ul>
        </div>
        </footer>
    </body>
</html>